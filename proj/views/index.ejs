<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Slot Machine Game - Home</title>
    <style>
        body {
            background-color: #f0f0f0;
            display: flex;
            flex-direction: column;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        header {
            width: 100%;
            padding: 20px;
            background-color: #333;
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        }

        header .welcome {
            margin-left: 20px;
        }

        header .buttons {
            display: flex;
            gap: 10px;
            margin-right: 20px;
        }

        header button {
            background-color: #555;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

        header button:hover {
            background-color: #777;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 200px;
            height: 200px;
            background-color: white;
            border: 2px solid black;
            border-radius: 10px;
            cursor: pointer;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            margin-top: 50px;
        }

        .container img {
            max-width: 100%;
            max-height: 100%;
        }

        /* Modal styles */
        #depositModal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0,0,0,0.8);
            padding-top: 100px;
        }

        #depositModal .modal-content {
            background-color: #333;
            margin: auto;
            padding: 30px;
            border: 1px solid #888;
            width: 400px;
            border-radius: 10px;
            color: white;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
        }

        #depositModal .modal-content label {
            font-size: 18px;
            margin-bottom: 10px;
            display: block;
        }

        #depositModal .modal-content input[type="number"] {
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            margin-bottom: 20px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
        }

        #depositModal .modal-content button {
            background-color: #555;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
        }

        #depositModal .modal-content button:hover {
            background-color: #777;
        }

        #depositModal .close {
            color: #fff;
            float: right;
            font-size: 24px;
            font-weight: bold;
            cursor: pointer;
        }

        #depositModal .close:hover,
        #depositModal .close:focus {
            color: #aaa;
            text-decoration: none;
        }
    </style>
    <script>
        function navigateToSlotMachine() {
            window.location.href = "/slot-machine";
        }

        function logout() {
            window.location.href = "/logout";
        }

        function goToProfile() {
            window.location.href = "/profile";
        }

        function openDepositModal() {
            document.getElementById('depositModal').style.display = 'block';
        }

        function closeDepositModal() {
            document.getElementById('depositModal').style.display = 'none';
        }

        function submitDeposit() {
            const depositAmount = document.getElementById('depositAmount').value;
            if (depositAmount > 0) {
                document.getElementById('depositForm').submit();
            } else {
                alert('Please enter a valid amount.');
            }
        }
    </script>
</head>
<body>
    <header>
        <div class="welcome">Welcome, <%= username %></div>
        <div>BALANCE: <%= balance %> Coins</div>
        <div class="buttons">
            <button onclick="openDepositModal()">DEPOSIT</button>
            <button onclick="goToProfile()">PROFILE</button>
            <button onclick="logout()">LOG OUT</button>
        </div>
    </header>
    <div class="container" onclick="navigateToSlotMachine()">
        <img src="/images/slot.png" alt="Slot Machine">
    </div>

    <!-- Deposit Modal -->
    <div id="depositModal">
        <div class="modal-content">
            <span class="close" onclick="closeDepositModal()">&times;</span>
            <form id="depositForm" action="/deposit" method="POST">
                <label for="depositAmount">Deposit Amount:</label>
                <input type="number" id="depositAmount" name="amount" min="1" required>
                <button type="button" onclick="submitDeposit()">Deposit</button>
            </form>
        </div>
    </div>
</body>
</html>
